    "/projects/{id}/members": {
      "get": {
        "summary": "List project members",
        "description": "Returns all members of a project",
        "operationId": "listProjectMembers",
        "tags": ["Projects"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of project members"
          }
        }
      }
    },
    "/projects/{id}/members/{userId}": {
      "delete": {
        "summary": "Remove project member",
        "description": "Removes a member from a project",
        "operationId": "removeProjectMember",
        "tags": ["Projects"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Member removed"
          }
        }
      }
    },
    "/chat/stream": {
      "post": {
        "summary": "Stream chat",
        "description": "Streams a chat response using Server-Sent Events",
        "operationId": "streamChat",
        "tags": ["Chat"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ChatRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "SSE stream of chat responses",
            "content": {
              "text/event-stream": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/chat/conversations": {
      "get": {
        "summary": "List conversations",
        "description": "Returns all conversations for the current user",
        "operationId": "listConversations",
        "tags": ["Chat"],
        "responses": {
          "200": {
            "description": "List of conversations"
          }
        }
      },
      "post": {
        "summary": "Create conversation",
        "description": "Creates a new conversation",
        "operationId": "createConversation",
        "tags": ["Chat"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateConversationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conversation created"
          }
        }
      }
    },
    "/chat/{id}": {
      "get": {
        "summary": "Get conversation",
        "description": "Returns a specific conversation with messages",
        "operationId": "getConversation",
        "tags": ["Chat"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversation details with messages"
          }
        }
      }
    },
    "/chat/{id}/messages": {
      "post": {
        "summary": "Add message",
        "description": "Adds a message to a conversation",
        "operationId": "addMessage",
        "tags": ["Chat"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddMessageRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message added"
          }
        }
      }
    },
    "/graph/search": {
      "post": {
        "summary": "Hybrid search",
        "description": "Performs a hybrid search combining vector similarity and graph traversal",
        "operationId": "hybridSearch",
        "tags": ["Graph"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Search results"
          }
        }
      }
    },
    "/mcp/rpc": {
      "post": {
        "summary": "MCP RPC",
        "description": "Handles JSON-RPC requests for the Model Context Protocol",
        "operationId": "mcpRpc",
        "tags": ["MCP"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JsonRpcRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "RPC response"
          }
        }
      }
    },
    "/mcp/sse/{projectId}": {
      "get": {
        "summary": "MCP SSE connect",
        "description": "Establishes an SSE connection for MCP",
        "operationId": "mcpSseConnect",
        "tags": ["MCP"],
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "SSE stream"
          }
        }
      }
    },
    "/mcp/sse/{projectId}/message": {
      "post": {
        "summary": "MCP SSE message",
        "description": "Sends a message through MCP SSE",
        "operationId": "mcpSseMessage",
        "tags": ["MCP"],
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Message sent"
          }
        }
      }
    },
    "/api-tokens": {
      "get": {
        "summary": "List API tokens",
        "description": "Returns all API tokens for the current user",
        "operationId": "listApiTokens",
        "tags": ["API Tokens"],
        "responses": {
          "200": {
            "description": "List of API tokens"
          }
        }
      },
      "post": {
        "summary": "Create API token",
        "description": "Creates a new API token",
        "operationId": "createApiToken",
        "tags": ["API Tokens"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateApiTokenRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "API token created"
          }
        }
      }
    },
    "/api-tokens/{tokenId}": {
      "get": {
        "summary": "Get API token",
        "description": "Returns a specific API token",
        "operationId": "getApiToken",
        "tags": ["API Tokens"],
        "parameters": [
          {
            "name": "tokenId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API token details"
          }
        }
      },
      "delete": {
        "summary": "Revoke API token",
        "description": "Revokes an API token",
        "operationId": "revokeApiToken",
        "tags": ["API Tokens"],
        "parameters": [
          {
            "name": "tokenId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Token revoked"
          }
        }
      }
    },
    "/users/search": {
      "get": {
        "summary": "Search users",
        "description": "Searches for users by name or email",
        "operationId": "searchUsers",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results"
          }
        }
      }
    },
    "/user-profile": {
      "get": {
        "summary": "Get current user profile",
        "description": "Returns the profile of the currently authenticated user",
        "operationId": "getUserProfile",
        "tags": ["User Profile"],
        "responses": {
          "200": {
            "description": "User profile"
          }
        }
      },
      "put": {
        "summary": "Update current user profile",
        "description": "Updates the profile of the currently authenticated user",
        "operationId": "updateUserProfile",
        "tags": ["User Profile"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUserProfileRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Profile updated"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from Zitadel authentication"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "unhealthy"]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "uptime": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "checks": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/HealthCheck"
            }
          }
        }
      },
      "HealthCheck": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Organization": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateOrganizationRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "Project": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "organizationId": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "CreateProjectRequest": {
        "type": "object",
        "required": ["name", "organizationId"],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "organizationId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "UpdateProjectRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      },
      "ChatRequest": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string"
          },
          "conversationId": {
            "type": "string",
            "format": "uuid"
          },
          "projectId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "CreateConversationRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "projectId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "AddMessageRequest": {
        "type": "object",
        "required": ["content", "role"],
        "properties": {
          "content": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["user", "assistant", "system"]
          }
        }
      },
      "SearchRequest": {
        "type": "object",
        "required": ["query"],
        "properties": {
          "query": {
            "type": "string"
          },
          "projectId": {
            "type": "string",
            "format": "uuid"
          },
          "limit": {
            "type": "integer",
            "default": 10
          }
        }
      },
      "JsonRpcRequest": {
        "type": "object",
        "required": ["jsonrpc", "method"],
        "properties": {
          "jsonrpc": {
            "type": "string",
            "enum": ["2.0"]
          },
          "method": {
            "type": "string"
          },
          "params": {
            "type": "object"
          },
          "id": {
            "oneOf": [{ "type": "string" }, { "type": "integer" }]
          }
        }
      },
      "CreateApiTokenRequest": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "UpdateUserProfileRequest": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "avatarUrl": {
            "type": "string"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
