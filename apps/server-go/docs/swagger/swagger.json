{
  "openapi": "3.0.3",
  "info": {
    "title": "Emergent API",
    "description": "Emergent Knowledge Base API - Go Server (v2)\n\nThis is the Go-based API server implementing the strangler fig migration pattern.",
    "version": "2.0.0",
    "contact": {
      "name": "Emergent Team"
    }
  },
  "servers": [
    {
      "url": "/",
      "description": "Current server"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Health check and monitoring endpoints"
    },
    {
      "name": "Organizations",
      "description": "Organization management"
    },
    {
      "name": "Projects",
      "description": "Project management within organizations"
    },
    {
      "name": "Documents",
      "description": "Document management and processing"
    },
    {
      "name": "Chunks",
      "description": "Document chunk management"
    },
    {
      "name": "Graph",
      "description": "Knowledge graph operations"
    },
    {
      "name": "Search",
      "description": "Search operations"
    },
    {
      "name": "Chat",
      "description": "Chat conversations and AI interactions"
    },
    {
      "name": "MCP",
      "description": "Model Context Protocol endpoints"
    },
    {
      "name": "API Tokens",
      "description": "API token management"
    },
    {
      "name": "Users",
      "description": "User management and search"
    },
    {
      "name": "User Profile",
      "description": "Current user profile management"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Returns detailed server health status including database connectivity",
        "operationId": "getHealth",
        "tags": ["Health"],
        "security": [],
        "responses": {
          "200": {
            "description": "Server is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "503": {
            "description": "Server is unhealthy"
          }
        }
      }
    },
    "/healthz": {
      "get": {
        "summary": "Liveness probe",
        "description": "Simple liveness check for Kubernetes",
        "operationId": "getHealthz",
        "tags": ["Health"],
        "security": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "OK"
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "summary": "Readiness probe",
        "description": "Readiness check for Kubernetes - verifies database connectivity",
        "operationId": "getReady",
        "tags": ["Health"],
        "security": [],
        "responses": {
          "200": {
            "description": "Server is ready"
          },
          "503": {
            "description": "Server is not ready"
          }
        }
      }
    },
    "/debug": {
      "get": {
        "summary": "Debug information",
        "description": "Returns debug information (only available in development)",
        "operationId": "getDebug",
        "tags": ["Health"],
        "security": [],
        "responses": {
          "200": {
            "description": "Debug information"
          },
          "404": {
            "description": "Not found (in production)"
          }
        }
      }
    },
    "/orgs": {
      "get": {
        "summary": "List organizations",
        "description": "Returns all organizations the current user has access to",
        "operationId": "listOrganizations",
        "tags": ["Organizations"],
        "responses": {
          "200": {
            "description": "List of organizations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Organization"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create organization",
        "description": "Creates a new organization",
        "operationId": "createOrganization",
        "tags": ["Organizations"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrganizationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Organization created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organization"
                }
              }
            }
          }
        }
      }
    },
    "/orgs/{id}": {
      "get": {
        "summary": "Get organization",
        "description": "Returns a specific organization by ID",
        "operationId": "getOrganization",
        "tags": ["Organizations"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Organization details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Organization"
                }
              }
            }
          },
          "404": {
            "description": "Organization not found"
          }
        }
      },
      "delete": {
        "summary": "Delete organization",
        "description": "Deletes an organization",
        "operationId": "deleteOrganization",
        "tags": ["Organizations"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Organization deleted"
          },
          "404": {
            "description": "Organization not found"
          }
        }
      }
    },
    "/projects": {
      "get": {
        "summary": "List projects",
