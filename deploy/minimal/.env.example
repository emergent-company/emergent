# =============================================================================
# Emergent Minimal Standalone Deployment - Environment Configuration
# =============================================================================
#
# REQUIRED SECRETS (generate with: openssl rand -hex 32)
# -------------------------------------------------------

# PostgreSQL Password
POSTGRES_PASSWORD=

# MinIO Root Password
MINIO_ROOT_PASSWORD=

# Standalone API Key (for MCP access)
STANDALONE_API_KEY=

# Google API Key (for embeddings and AI)
GOOGLE_API_KEY=

# Tailscale Auth Key (get from: https://login.tailscale.com/admin/settings/keys)
# Generate an auth key with tag:emergent and reusable=true
TS_AUTHKEY=

# =============================================================================
# OPTIONAL CONFIGURATION (defaults provided)
# =============================================================================

# Database Configuration
POSTGRES_USER=emergent
POSTGRES_DB=emergent
POSTGRES_PORT=5432

# Server Configuration
SERVER_PORT=3002

# Standalone User Configuration
STANDALONE_USER_EMAIL=admin@localhost
STANDALONE_ORG_NAME=Default Organization
STANDALONE_PROJECT_NAME=Default Project

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_DOMAIN=minio

# Kreuzberg Configuration
KREUZBERG_PORT=8000
KREUZBERG_LOG_LEVEL=info

# AI Configuration
EMBEDDING_DIMENSION=768

# Tailscale Configuration
TAILSCALE_HOSTNAME=emergent
